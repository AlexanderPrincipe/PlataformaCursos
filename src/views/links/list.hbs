<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="col-md-3">
            <div class="card text-center">
                <a href="https://www.google.com.pe">
                    <div class="card-header">
                        <img class="card-img-top"
                            src="https://cdn.macworld.co.uk/cmsdata/features/3638150/setup_learn_sql_mac_thumb800.jpg">
                    </div>
                </a>
                <div class="card-body">
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                    <p class="m-2">{{description}}</p>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn btn-danger" href="/links/delete/{{id}}">
                        Borrar Link
                    </a>
                    <a class="btn btn-secondary" href="/links/edit/{{id}}">
                        Editar
                    </a>
                </div>
                <div class="card-footer">
                    <form action="/checkout" method="POST">
                        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                            data-key="pk_test_QtYP2bKoBJSdlqrHZxl8XxAv" data-amount="300" data-name="Curso SQL"
                            data-description="Ulima"
                            data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                            data-locale="auto">
                            </script>
                        <button type="submit" class="btn btn-dark btn-block">
                            Buy <i class="fas fa-shopping-cart"></i>
                        </button>
                        <script>
                            document.getElementsByClassName("stripe-button-el")[0].style.display = 'none';
                        </script>
                    </form>
                </div>
            </div>
        </div>
        {{else}}

        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No tiene cursos existentes</p>
                <a href="/links/add">Agrega un curso!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>